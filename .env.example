# ============================================
# RAG Demo 项目配置文件
# ============================================

# ============================================
# MySQL数据库配置
# ============================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=rag_demo

# ============================================
# Milvus向量数据库配置
# ============================================
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=knowledge_base

# ============================================
# 华为云推理服务配置（优先使用）
# ============================================
# 已在config.py中设置默认值，如需修改可在此覆盖
HUAWEI_API_KEY=
HUAWEI_API_URL=
HUAWEI_MODEL=

# ============================================
# OpenAI配置（作为备用推理服务）
# ============================================
# 当华为云连接失败时，会自动切换到OpenAI
# 建议配置此选项作为备用
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=

# ============================================
# Embedding API配置（优先使用，可选）
# ============================================
# 如果设置了EMBEDDING_API_KEY，将优先使用API进行向量化
# 使用OpenAI Embedding API时，填写OpenAI的API Key
EMBEDDING_API_KEY=sk-48d1dacd7edf466a9a81fab67589e16c
EMBEDDING_API_BASE_URL=
EMBEDDING_API_MODEL=text-embedding-3-small

# ============================================
# 本地向量化模型配置（备用）
# ============================================
# 当Embedding API不可用时，使用本地模型
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cpu

# ============================================
# 文档处理配置
# ============================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ============================================
# RAG检索配置
# ============================================
TOP_K=3